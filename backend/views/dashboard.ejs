<%
    function getHealthClass(health) {
        if (!health) return 'health-unknown';
        health = health.toLowerCase();
        if (health.includes('good') || health.includes('healthy')) {
            return 'health-good';
        } else if (health.includes('warning') || health.includes('attention')) {
            return 'health-warning';
        } else {
            return 'health-danger';
        }
    }
%>
<!DOCTYPE html>
<html>
<head>
    <title>Dashboard - PlantID</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            max-width: 1200px;
            margin: 50px auto;
            padding: 20px;
        }
        .user-info {
            background-color: #f5f5f5;
            padding: 20px;
            border-radius: 5px;
            margin-bottom: 20px;
        }
        .plant-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
            gap: 20px;
            margin-top: 20px;
        }
        .plant-card {
            background-color: #f5f5f5;
            border-radius: 5px;
            padding: 15px;
            transition: transform 0.2s;
        }
        .plant-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }
        .plant-image {
            width: 100%;
            height: 200px;
            object-fit: cover;
            border-radius: 5px;
            margin-bottom: 10px;
        }
        .plant-info {
            margin-top: 10px;
        }
        .plant-name {
            font-size: 1.2em;
            font-weight: bold;
            margin-bottom: 5px;
        }
        .plant-type {
            color: #666;
            font-size: 0.9em;
            margin-bottom: 10px;
        }
        .plant-status {
            display: inline-block;
            padding: 5px 10px;
            border-radius: 15px;
            font-size: 0.9em;
            margin-top: 5px;
        }
        .health-good {
            background-color: #4CAF50;
            color: white;
        }
        .health-warning {
            background-color: #ff9800;
            color: white;
        }
        .health-danger {
            background-color: #f44336;
            color: white;
        }
        .health-unknown {
            background-color: #9e9e9e;
            color: white;
        }
        .action-buttons {
            margin-top: 20px;
        }
        .button {
            display: inline-block;
            padding: 10px 20px;
            background-color: #4CAF50;
            color: white;
            text-decoration: none;
            border-radius: 4px;
            margin-right: 10px;
        }
        .button:hover {
            background-color: #45a049;
        }
        .empty-state {
            text-align: center;
            padding: 40px;
            background-color: #f5f5f5;
            border-radius: 5px;
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <div class="user-info">
        <h1>Welcome, <%= user.name || user.email %></h1>
        <div class="action-buttons">
            <a href="/scan" class="button">Scan New Plant</a>
            <a href="/logout" class="button" style="background-color: #666;">Logout</a>
        </div>
    </div>

    <% if (plants && plants.length > 0) { %>
        <div class="plant-grid">
            <% plants.forEach(function(plant) { %>
                <div class="plant-card">
                    <% if (plant.image && plant.image.filename) { %>
                        <img src="/uploads/<%= plant.image.filename %>" alt="<%= plant.plantName %>" class="plant-image">
                    <% } %>
                    <div class="plant-info">
                        <div class="plant-name"><%= plant.plantName %></div>
                        <div class="plant-type"><%= plant.plantType %></div>
                        <div class="plant-status <%= getHealthClass(plant.status) %>">
                            <%= plant.status || 'Status Unknown' %>
                        </div>
                        <% if (plant.aiAnalysis && plant.aiAnalysis.confidence) { %>
                            <div class="confidence">
                                Confidence: <%= Math.round(plant.aiAnalysis.confidence * 100) %>%
                            </div>
                        <% } %>
                    </div>
                </div>
            <% }); %>
        </div>
    <% } else { %>
        <div class="empty-state">
            <h2>No Plants Yet</h2>
            <p>Start by scanning your first plant!</p>
            <a href="/scan" class="button">Scan New Plant</a>
        </div>
    <% } %>
</body>
</html>